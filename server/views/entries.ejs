<%- include('partials/header') %>
<div style="margin-top:80px;"></div>"
<div class ="container">
    <div class="row">
        <div class = "offset-md-3 col-md-6">
            <h1><% title %></h1>

            <form class="form" method="post">
                <div class = "form-group">
                    <label for="nameTextField">Workout Title</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder = "Enter your workout title"
                    name="WorkoutTitle" required>
                </div> 
                 <div class = "form-group">
                    <label for="titleTextField">Date</label>
                    <input type="text" class="form-control"
                    id="titleTextField"
                    placeholder = "Enter todays date"
                    name="Date" required>
                </div> 
                 <div class = "form-group">
                    <label for="WorkoutTextField">Workout Time</label>
                    <input type="text" class="form-control"
                    id="WorkoutTextField"
                    placeholder = "Enter your workout title"
                    name="WorkoutTime" required>
                </div>
                <div class = "form-group">
                    <label for="TargetTextField">Target Areas</label>
                    <input type="text" class="form-control"
                    id="TargetTextField"
                    placeholder = "Which muscle groups did you target"
                    name="TargetAreas" required>
                </div>
                <div class = "form-group">
                    <label for="monthTextField">Exercise List</label>
                    <input type="text" class="form-control"
                    id="monthTextField"
                    placeholder = "List the exercises you did"
                    name="ExerciseList" required>
                </div>
                <div class="form-group">
                    <label for="reflectionField">Reflection</label>
                    <textarea class="form-control"
                              id="reflectionField"
                              name="Reflection"
                              placeholder="How long did your workout take"
                              required></textarea>
                </div>
                <br>
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit
                </button>
                <a href = "/Entries" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Delete
                </a>
            </form>
        </div>
</div>
<%- include('partials/footer') %>